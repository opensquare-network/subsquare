{
  "name": "subsquare",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "git@github.com:opensquare-network/subsquare.git",
  "author": "OpenSquare <https://www.opensquare.network/>",
  "scripts": {
    "scan": "yarn workspace @subsquare/scan scan",
    "test": "yarn workspace @subsquare/scan test && yarn workspace @subsquare/scan-common test",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "husky": "^4.3.5",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "prettier": "^2.2.1",
    "patch-package": "^6.5.0",
    "postinstall-postinstall": "^2.1.0"
  }
}
